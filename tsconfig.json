{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ES6",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "allowJs": true,
        "checkJs": true,
        "moduleResolution": "bundler",
        "outDir": "dist",
        "resolveJsonModule": true,
        "removeComments": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "importHelpers": true,
        "types": ["node"],
        "paths": {
            "tslib": ["../tslib/tslib.d.ts"]
        }
    },
    "include": ["src"],
    "exclude": [
        "deprecated", 
        "node_modules", 
        "dist",
        "test-pkg",
        "docs"
    ]
}