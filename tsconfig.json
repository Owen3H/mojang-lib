{
    "compilerOptions": {
        "module": "ES2022",
        "lib": ["ES2022"],
        "target": "ES2017",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "allowJs": true,
        "checkJs": true,
        "moduleResolution": "node",
        "outDir": "dist/esm",
        "resolveJsonModule": true,
        "removeComments": true,
        "skipDefaultLibCheck": true,
        "importHelpers": true,
        "declaration": true,
        "types": ["node"],
        "rootDir": "src"
    },
    "include": ["src", "package.json"],
    "exclude": [
        "src/deprecated", 
        "node_modules", 
        "dist"
    ]
}