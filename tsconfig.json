{
    "compilerOptions": {
        "module": "NodeNext",
        "lib": ["ES2022"],
        "target": "ES6",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "allowJs": true,
        "checkJs": false,
        "moduleResolution": "node",
        "outDir": "dist",
        "resolveJsonModule": true,
        "rootDir": "."
    },
    "include": ["src", "package.json"],
    "exclude": ["src/deprecated", "node_modules", "dist"]
}